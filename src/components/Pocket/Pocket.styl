$color = #3a82c6
$color-green = #53b374
$color-red = #ff6a59
$color-dark-gray = #4b545b

$mediaBreakPointSmall = 767px

.pocket
  margin 10px
  font-size 24px
  transition all .2s ease-out
  color rgba($color, .3)

  &:hover
    cursor pointer

  &_source
    transform: scale(1.2)
    color $color
    font-weight 400

  &_destination
    transform scale(1.1)
    color rgba($color, .7)
    font-weight 300

  &-info
    display flex
    justify-content space-between

  &-rate
    margin-top 4px
    text-align right
    font-size 12px
    color rgba($color-dark-gray, .8)

  &-converted
    margin-top 4px
    text-align right
    font-size 12px

    &_sign_minus
      color rgba($color-red, .8)

    &_sign_plus
      color rgba($color-green, .8)
