$mediaBreakPointSmall = 767px

.exchanger
  padding 12px
  width 720px
  display flex
  flex-flow column
  justify-content space-between
  margin 24px auto
  text-align center

  &-hint
    height 24px

  &-pockets
    display flex
    justify-content space-around
    min-height 80px

  &-input-row
    font-size 24px
    line-height 1.47

  &-input
    width 180px
    margin-right 12px
    font-size 24px
    line-height 1.47
    text-align right

  &-buttons
    margin 24px 0 0
    display flex
    flex-direction column
    align-items center

  &-button
    width 240px
    font-size 24px
    line-height 1.47
    color #eee
    background-color #3a82c6
    cursor pointer

    & + &
      margin-top 8px

    &_outlined
      background-color white
      color #3a82c6
      outline 0
      border 0
      font-size 14px
      font-weight 200

    &_disabled
      cursor none
      pointer-events none
      opacity .2

  @media screen and (max-width: $mediaBreakPointSmall)
    width 100%
    padding 0

    &-input-row
      margin-top 24px

    &-pockets
      flex-flow column wrap
      align-items center
      min-height 240px

    &-button
      margin-top 12px

    &-input
      width 154px
      padding 0 12px
      border 1px solid lightgray
